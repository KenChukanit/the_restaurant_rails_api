<% @foods.each do |food|%>
<div class="card w-60vw align-items-center mb-4" style="margin: auto;">
<h3 class="mt-3"style="background-color: pink;"><%= link_to(food.food_name, food_path(food.id) )%></h3>

<p> $<%= food.price %></p>
<p> <%= food.ingredients %></p>
<%= image_tag food.img_url, width: "200px",heigth: "200px",class: "mb-3" %>
</div>
<% end %>
